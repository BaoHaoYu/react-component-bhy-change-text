base()
    button
        background none
        border none
        outline none
        cursor pointer
        &:hover
            background #ececec
            border-radius 5px
    input
        outline none
        border-radius 4px
        border 1px solid #d8d8d8
        padding 3px
        font-size 14px
        padding-left 6px
    p
        margin 0

.ChangeText
    display flex
    align-items center
    base()
    &-value
        margin-right 8px !important
        font-size 14px
        padding 3px
        padding-left 6px
    &-close
    &-open
        display flex
        align-items center
        > *:nth-child(n+2)
            margin-left 10px
